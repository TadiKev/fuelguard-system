{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TankReading",
  "type": "object",
  "required": ["event_type","station_id","tank_id","timestamp","level_l"],
  "properties": {
    "event_type": { "const": "tank.reading" },
    "station_id": { "type": "string", "format": "uuid" },
    "tank_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "level_l": { "type": "number" },
    "temperature_c": { "type": "number" }
  }
}
